@using Vovinam.Common
@using Vovinam.Services
@using Vovinam.WebBackend.Common
@using Vovinam.WebBackend.Web

@using PagedList.Mvc;
@model List<Vovinam.Data.LevelUpHistory>
@if (Model.Count != 0)
{
    <table class="table table-striped table-colored table-info table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>
                    Tên
                </th>
                <th>
                    Cột điểm
                </th>
                <th>
                    Điểm cũ
                </th>
                <th>
                    Điểm mới
                </th>
                <th>
                    Người thay đổi
                </th>
                <th>
                    Thời gian
                </th>
            </tr>
        </thead>
        @{ int index = 0; }

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(index++)
                    </td>
                    <td>
                        @item.StudentName
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.PointOld
                    </td>
                    <td>
                        @item.PointNew
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.TimeCreate.ToString("dd/MM/yyyy hh:mm")

                    </td>
                </tr>
            }

        </tbody>

    </table>
}
else
{
    <h4 style="text-align:center; margin-top:10px">Chưa cập nhật</h4>
}